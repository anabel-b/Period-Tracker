<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeriodBleeding"
    android:background="@drawable/img_1"
    android:padding="@dimen/heading_text_size"
    >

    <TextView
        android:id="@+id/Flow"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:text="@string/Intro_Text_What_Is_Flow"
        android:textStyle="bold"
        android:textSize="@dimen/heading_text_size"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:paddingBottom="20dp"

        />

    <ImageButton
        android:id="@+id/spotting_button"
        android:layout_width="115dp"
        android:layout_height="105dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:contentDescription="SpottingImageButton"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_3"
        />

    <TextView
        android:id="@+id/spotting_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/Spotting_Textview"
        android:background="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"

        />

    <ImageButton
        android:id="@+id/Light_Period"
        android:layout_width="115dp"
        android:layout_height="105dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="right"
        android:background="@color/white"
        android:contentDescription="LightPeriodImageButton"
        android:padding="8dp"
        android:scaleType="fitXY"

        android:src="@drawable/img_4" />
    <TextView
        android:id="@+id/light_period_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="2"
        android:layout_column="2"
        android:text="@string/Light_Period_Text_View"
        android:background="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="right"

        />

    <ImageButton
        android:id="@+id/Regular_Period"
        android:layout_width="115dp"
        android:layout_height="105dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:contentDescription="RegularPeriodImageButton"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_5" />

    <TextView
        android:id="@+id/regular_period_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:text="@string/regular_period_text_view"
        android:background="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/Heavy_Period"
        android:layout_width="115dp"
        android:layout_height="105dp"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_gravity="right"
        android:background="@color/white"
        android:contentDescription="HeavyPeriodImageButton"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_6" />
    <TextView
        android:id="@+id/heavy_period_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="5"
        android:layout_column="2"
        android:text="@string/heavy_period_textview"
        android:background="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="right"
        />

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:padding="8dp"
        />
</GridLayout>